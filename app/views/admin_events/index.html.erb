<% content_for :title, "All Events" %>

<h1>All Events</h1>
<p><%= link_to "Create New Event", new_admin_event_path %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Required</th>
      <th>Approved</th>
      <th>Pending</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_date %></td>
        <td><%= event.location %></td>
        <td><%= event.required_volunteer_count %></td>
        <td><%= event.assigned_volunteer_count %></td>
        <td><%= event.pending_assignments_count %></td>
        <td><%= event.status %></td>
        <td>
          <%= link_to "View", admin_event_path(event) %> |
          <%= link_to "Edit", edit_admin_event_path(event) %> |
          <%= button_to "Delete", admin_event_path(event), method: :delete, data: { turbo_confirm: "Delete this event?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
