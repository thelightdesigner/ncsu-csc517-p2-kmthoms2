<% content_for :title, "Manage Volunteers" %>

<h1>Manage Volunteers</h1>
<p><%= link_to "Create Volunteer", new_admin_volunteer_path %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Total Hours</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.id %></td>
        <td><%= volunteer.username %></td>
        <td><%= volunteer.full_name %></td>
        <td><%= volunteer.email %></td>
        <td><%= volunteer.total_logged_hours %></td>
        <td>
          <%= link_to "View", admin_volunteer_path(volunteer) %> |
          <%= link_to "Edit", edit_admin_volunteer_path(volunteer) %> |
          <%= button_to "Delete", admin_volunteer_path(volunteer), method: :delete, data: { turbo_confirm: "Delete this volunteer?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
