<% content_for :title, "Edit Admin Profile" %>

<h1>Edit Admin Profile</h1>
<p>Username cannot be changed.</p>

<%= form_with model: @admin, url: admin_profile_path, method: :patch do |form| %>
  <% if @admin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin.errors.count, "error") %> prevented save:</h2>
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :password, style: "display: block" %>
  <%= form.password_field :password, required: true %>

  <%= form.label :full_name, style: "display: block" %>
  <%= form.text_field :full_name, required: true %>

  <%= form.label :email, style: "display: block" %>
  <%= form.email_field :email, required: true %>

  <%= form.submit "Save Profile" %>
<% end %>
