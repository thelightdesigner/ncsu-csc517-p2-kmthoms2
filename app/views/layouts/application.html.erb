<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Volunteer Manager" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.simplecss.org/simple-v1.css">
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice.present? %>
      <p style="color: green;"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p style="color: red;"><%= alert %></p>
    <% end %>

    <% if volunteer_logged_in? %>
      <nav>
        <%= link_to "Volunteer Home", volunteer_home_path %>
        <%= link_to "My Profile", volunteer_profile_path %>
        <%= link_to "Available Events", events_path %>
        <%= link_to "My Assignments", assigned_events_path %>
        <%= link_to "My History", volunteer_history_path %>
        <%= button_to "Log out", logout_path, method: :delete %>
      </nav>
    <% elsif admin_logged_in? %>
      <nav>
        <%= link_to "Admin Home", admin_home_path %>
        <%= link_to "My Profile", admin_profile_path %>
        <%= link_to "Volunteers", admin_volunteers_path %>
        <%= link_to "Events", admin_events_path %>
        <%= link_to "Assignments", admin_volunteer_assignments_path %>
        <%= button_to "Log out", logout_path, method: :delete %>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
